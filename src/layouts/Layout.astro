---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/styles/dracula.min.css"
    />
    <script
      is:inline
      src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/highlight.min.js"
    ></script>
    <script is:inline>
      hljs.initHighlightingOnLoad();
    </script>
    <title>{title}</title>
  </head>
  <body class="bg-white custom-scroll">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }

  .custon-scroll {
    --sb-track-color: #d8d8d8;
    --sb-thumb-color: #9e9e9e;
    --sb-size: 4px;

    scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
  }

  .custon-scroll::-webkit-scrollbar {
    width: var(--sb-size);
  }

  .custon-scroll::-webkit-scrollbar-track {
    background: var(--sb-track-color);
    border-radius: 16px;
  }

  .custon-scroll::-webkit-scrollbar-thumb {
    background: var(--sb-thumb-color);
    border-radius: 16px;
  }
</style>
